@model BrandViewModel;
@{
    if (TempData["ErrorViewModel"] != null)
    {
        var error = Newtonsoft.Json.JsonConvert.DeserializeObject<ErrorViewModel>((string)TempData["ErrorViewModel"]);
        <div class="alert @(error.IsOccurError ? "alert-danger" : "alert-success")">
            @error.Message
        </div>
    }
}  

<h2>Model Entry Form</h2>
<form action="/brand/entry" method="post">
    <div class="col-6 mb-3">
        <label for="Name" class="form-label">Name</label>
        <input type="text" name="Name" class="form-control" placeholder="Enter Model Name" required/>
    </div>
    <div class="col-6 mb-3">
        <label for="Brand" class="form-label">Brand</label>
        <input type="text" name="Brand" class="form-control" placeholder="Enter Brand" required/>
    </div>
    <div class="col-6 mb-3">
        <label for="Specification" class="form-label">Specification</label>
        <textarea name="Specification" rows="3" class="form-control" placeholder="Enter Specification" required></textarea>
    </div>
    <div class="col-6 mb-3">
        <label for="ReleaseDate" class="form-label">Release Date</label>
        <input type="date" name="ReleaseDate" class="form-control" placeholder="Enter Date" />
    </div>
    <button type="submit" class="btn btn-success"><i class="fa-solid fa-floppy-disk"></i>Save</button>
    <a href="/brand/list" class="btn btn-warning"><i class="fa fa-window-close"></i>Cancel</a>
</form>
