@model IEnumerable<InventoryViewModel>

<h1 class="mb-3">Inventory List Informartion</h1>
<table class="table table-hover" id="InventoryTable">
    <thead class="table-dark">
        <tr>
            <th scope="col">No</th>
            <th scope="col">Category</th>
            <th scope="col">Product Code</th>
            <th scope="col">Product Name</th>
            <th scope="col">Quantity</th>
            <th scope="col">Earliest Date</th>
        </tr>
    </thead>
    @{
        int i = 1;
    }
    <tbody>
            @foreach(var inventory in Model){
            <tr>
                <td>@i</td>
                <td>@inventory.CategoryName</td>
                <td>@inventory.ProductCode</td>
                <td>@inventory.ProductName</td>
                <td>@inventory.Quantity</td>
                <td>@inventory.EarliestDate.ToString("yyyy-MM-dd")</td>
            </tr>
            i++;
            }
    </tbody>
</table>
<script type="text/javascript">
    $(document).ready(function () {
        // Initialize DataTable
        $("#InventoryTable").DataTable();
    });
</script>
