
<form action="/product/report" method="post">
    <div class="col-6">

        @if(ViewBag.Info != null){
            <div class="alert alert-info">@ViewBag.Info</div>
        }
        <div class="mt-3">
            <label class="form-label">Product Name</label>
            <input type="text" name="Name" class="form-control" placeholder="Enter Product Name" />
        </div>
        <div class="mb-3">
            <label class="form-label">Category</label>
            <select class="form-control" name="CategoryId">
                    <option value="a">All</option>
                    @foreach(var category in ViewBag.Category){
                        <option value="@category.Id">@category.Name</option>
                    }
            </select>
        </div>
        <div class="mb-3">
            <label class="form-label">Phone Model</label>
            <select class="form-control" name="PhoneModelId">
                <option value="a">All</option>
                @foreach(var m in ViewBag.PhoneModel){
                    <option value="@m.Id">@m.Name</option>
                }
            </select>
        </div>
        <div class="mb-3">
            <button type="submit" class="btn btn-primary"><i class="fa-solid fa-floppy"></i>Export</button>
        </div>
    </div>
</form>
