</html>
<script>
    $(document).ready(function () {
        // Add click event to all nav-link elements inside nav-treeview
        $('.nav-treeview .nav-link').on('click', function () {
            // Remove active class from all nav-link elements
            $('.nav-treeview .nav-link').removeClass('active');

            // Add active class to the clicked nav-link element
            $(this).addClass('active');
        });
    });
</script>